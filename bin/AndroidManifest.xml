<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ajousmarttimetable"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Light.NoTitleBar" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ShowTimetableActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.example.ajousmarttimetable.SHOW_TIMETABLE" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CourseDetailActivity"
            android:label="@string/app_name" >
            <intent-filter>
                
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MakeTimetableActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.example.ajousmarttimetable.MAKE_TIMETABLE" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ModifyTimetableActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.example.ajousmarttimetable.MODIFY_TIMETABLE" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DeleteTimetableActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.example.ajousmarttimetable.DELETE_TIMETABLE" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ShowOthersTimetableActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.example.ajousmarttimetable.SHOW_OTHERS_TIMETABLE" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SettingsActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.example.ajousmarttimetable.SETTINGS" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MyPrint"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.example.ajousmarttimetable.MYPRINT" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>
